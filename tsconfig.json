{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "noEmit": false
  },
  "include": [
    "resources/js/**/*.ts",
    "resources/js/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "public"
  ]
}
